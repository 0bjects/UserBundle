{% extends '::base.html.twig' %}
{% block title %}{% trans %}Forgot Password{% endtrans %}{% endblock %}

{% block body %}
{% if error %}
    <div>{{ error }}</div>
{% endif %}
{% if success %}
    <div>{{ success }}</div>
{% endif %}
{% if form_errors(form) %}
    <div>{{ form_errors(form) }}</div>
{% endif %}
<form action="{{ path('forgot_password') }}" method="post" {{ form_enctype(form) }}>

    {{ form_errors(form.email) }}<br>
    <label>{% trans %}Email{% endtrans %}:</label>
    {{ form_widget(form.email) }}<br>

    {{ form_rest(form) }}

    <input type="submit" name="signup" value="{% trans %}Submit{% endtrans %}" />
</form>
{% endblock %}