{% extends '::base.html.twig' %}
{% block title %}{% trans %}Login{% endtrans %}{% endblock %}

{% block body %}
{% if error %}
    <div>{{ error.message|trans }}</div>
{% endif %}

<form action="{{ url('login_check') }}" method="post">
    <label for="username">{% trans %}Login Name{% endtrans %}:</label>
    <input type="text" id="username" name="_username" placeholder="Login Name" value="{{ last_username }}" /><br />

    <label for="password">{% trans %}Password{% endtrans %}:</label>
    <input type="password" id="password" name="_password" /><br />
    
    <label for="remember_me">{% trans %}Remember me{% endtrans %}:</label>
    <input type="checkbox" id="remember_me" name="_remember_me" checked /><br />

    <input type="submit" name="login" value="{% trans %}Login{% endtrans %}" />
</form>
{% render "ObjectsAPIBundle:Facebook:facebookButton" with {'facebookUserHandleRoute' : 'facebook_logging','permissions': 'email,publish_stream','cssClass' : '' , 'linkText' : 'facebook'} %}<br />
<a onclick="newWindow = window.open('{{ url('twitter_authentication', {'redirectRoute': 'twitter_enter', 'popup': 'yes'}) }}', '{% trans %}Twitter Login{% endtrans %}', 'height=200, width=200');if(window.focus)newWindow.focus();return false;" target="_blank" title="{% trans %}Twitter Login{% endtrans %}" href="{{ url('twitter_authentication', {'redirectRoute': 'twitter_enter'}) }}">{% trans %}Twitter Login{% endtrans %}</a><br />
<a title="{% trans %}forgot your password{% endtrans %}" href="{{ url('forgot_password') }}">{% trans %}forgot your password{% endtrans %}?</a><br />
{% trans %}new user{% endtrans %} <a title="{% trans %}Sign up{% endtrans %}" href="{{ url('signup') }}">{% trans %}Sign up{% endtrans %}?</a>
{% endblock %}